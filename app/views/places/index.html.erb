<h1>Places I've Been</h1>

<%#list of current places%>




<div class="row">
 <div class="col-3">
  <% for place in @places do %>
   <h4><%= place["name"] %></h4>
      <h4><%= place["name"] %></h4>
      <img class="img-fluid" src="<%= place["image"] %>" class="w-full">
    </div>
  <% end %>
</div>




<%#new places%> 

 <ul>
   <% for place in @places %>
    <li>
      <a href="/places/<%= place["id"] %>"><%= place["name"] %></a>
    </li>
   <% end %>
</ul>

<p><a href="/place/new">Create a new place</a></p>